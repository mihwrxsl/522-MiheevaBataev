<Page x:Class="_522_Miheeva.Pages.UsersTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Miheeva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="👥 Таблица пользователей">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Style="{DynamicResource HeaderFooterStyle}"
                Padding="15">
            <Grid>
                <TextBlock Text="👥 Управление пользователями" 
                           Style="{DynamicResource HeaderTextStyle}"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Таблица -->
        <Border Grid.Row="1" 
                Margin="20"
                Style="{DynamicResource AuthCardStyle}">

            <StackPanel>
                <!-- Панель действий -->
                <StackPanel Orientation="Horizontal" 
                            Margin="0,0,0,15"
                            HorizontalAlignment="Center">
                    <Button x:Name="BtnAddUser" 
                            Content="➕ Добавить" 
                            Style="{DynamicResource FilterButtonStyle}"
                            Click="BtnAddUser_Click"
                            Margin="0,0,10,0"
                            ToolTip="Добавить нового пользователя в систему 🌟"/>
                    <Button x:Name="BtnDeleteUser" 
                            Content="🗑️ Удалить" 
                            Style="{DynamicResource FilterButtonStyle}"
                            Click="BtnDeleteUser_Click"
                            Margin="10,0,0,0"
                            ToolTip="Удалить выбранного пользователя (будь осторожна!) ❌"/>
                </StackPanel>

                <!-- Таблица -->
                <DataGrid x:Name="UsersDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="👑 Логин" 
                      Binding="{Binding Login}" 
                      Width="120">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Уникальное имя пользователя для входа в систему ✨"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="🔒 Пароль" 
                      Binding="{Binding Password}" 
                      Width="150">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Хэшированный пароль пользователя (зашифрован для безопасности) 🔐"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="💎 Роль" 
                      Binding="{Binding Role}" 
                      Width="100">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Роль пользователя: Admin - полный доступ, User - обычный пользователь 👑"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="👤 ФИО" 
                      Binding="{Binding FIO}" 
                      Width="200">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Фамилия, Имя и Отчество пользователя полностью 📝"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="✨ Действия" 
                          Width="120">
                            <DataGridTemplateColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Доступные действия с пользователем ✨"/>
                                </Style>
                            </DataGridTemplateColumn.HeaderStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✏️ Редактировать" 
                        Style="{DynamicResource FilterButtonStyle}"
                        Click="EditUser_Click"
                        Tag="{Binding ID}"
                        Margin="2"
                        ToolTip="Нажми, чтобы изменить данные этого пользователя 💖"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!-- Статус -->
        <Border Grid.Row="2" 
                Style="{DynamicResource HeaderFooterStyle}"
                Padding="10">
            <TextBlock x:Name="StatusText" 
                       Text="🌸 Готово к работе!" 
                       Style="{DynamicResource HeaderTextStyle}"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>