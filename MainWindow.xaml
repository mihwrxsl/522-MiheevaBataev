<Window x:Class="_522_Miheeva.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_522_Miheeva"
        mc:Ignorable="d"
        Title="💖 Glamour Payment System" Height="600" Width="800"
        Closing="Window_Closing"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.Row="0" Style="{DynamicResource HeaderFooterStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BackButton" 
                            Content="Назад" 
                            Width="80" 
                            Margin="10,0,0,0"
                            Click="BackButton_Click"
                            Grid.Column="0"
                            Style="{DynamicResource BackButtonStyle}"
                            ToolTip="Вернуться на предыдущую страницу 🔙"/>

                <TextBlock Text="Glamour Payments" 
                           HorizontalAlignment="Center" 
                           Style="{DynamicResource HeaderTextStyle}"
                           Grid.Column="1"/>

                <ComboBox x:Name="StyleComboBox"
                          Width="150"
                          Height="30"
                          Margin="0,0,10,0"
                          SelectionChanged="StyleComboBox_SelectionChanged"
                          Grid.Column="2"
                          ToolTip="Выбери свой любимый стиль! 🌸🌙">
                    <ComboBoxItem Content="🌸 Светлый гламур" Tag="GlamourLight.xaml"/>
                    <ComboBoxItem Content="🌙 Тёмный шик" Tag="GlamourDark.xaml"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- Средняя часть -->
        <Frame x:Name="MainFrame" 
               Grid.Row="1" 
               NavigationUIVisibility="Hidden"/>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" Style="{DynamicResource HeaderFooterStyle}">
            <TextBlock x:Name="DateTimeNow"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,20,0"
                       Style="{DynamicResource HeaderTextStyle}"/>
        </Border>
    </Grid>
</Window>