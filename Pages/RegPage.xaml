<Page x:Class="_522_Miheeva.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Miheeva.Pages"
      mc:Ignorable="d" 
      Title="💖 Регистрация">

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Карточка регистрации -->
            <Border Grid.Row="1"
        CornerRadius="20"
        Padding="50"
        Margin="30"
        Width="420"
        Height="600"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Style="{DynamicResource AuthCardStyle}">

                <StackPanel Width="320" Margin="0,0,-4,-19">
                    <!-- Заголовок -->
                    <TextBlock Text="💖 Регистрация" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"
                   ToolTip="Создай свой гламурный аккаунт! 🌟"/>

                <!-- Поле логина -->
                    <TextBlock Text="👑 Логин:" 
                               Margin="0,0,0,8"
                               FontWeight="SemiBold"/>

                    <Grid Margin="0,0,0,15" Height="35">
                        <TextBox x:Name="TextBoxLogin" 
                                 Padding="8"
                                 ToolTip="Придумай уникальный логин! ✨"
                                 TextChanged="TextBoxLogin_TextChanged" Height="Auto"/>
                        <TextBlock x:Name="LoginPlaceholder"
                                   Text="Введите логин..."
                                   Foreground="Gray"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Поле ФИО -->
                    <TextBlock Text="📝 ФИО:" 
                               Margin="0,0,0,8"
                               FontWeight="SemiBold"/>

                    <Grid Margin="0,0,0,15" Height="35">
                        <TextBox x:Name="TextBoxFIO" 
                                 Padding="8"
                                 ToolTip="Введи свои фамилию, имя и отчество 🌟"
                                 TextChanged="TextBoxFIO_TextChanged" Height="Auto"/>
                        <TextBlock x:Name="FIOPlaceholder"
                                   Text="Иванова Анастасия Ивановна"
                                   Foreground="Gray"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Поле пароля -->
                    <TextBlock Text="🔒 Пароль:" 
                               Margin="0,0,0,8"
                               FontWeight="SemiBold"/>

                    <Grid Margin="0,0,0,15" Height="35">
                        <PasswordBox x:Name="PasswordBox" 
                                     Padding="8"
                                     ToolTip="Минимум 6 символов, английская раскладка, хотя бы одна цифра! 💪"
                                     PasswordChanged="PasswordBox_PasswordChanged" Height="Auto"/>
                        <TextBlock x:Name="PasswordPlaceholder"
                                   Text="Введите пароль..."
                                   Foreground="Gray"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Подтверждение пароля -->
                    <TextBlock Text="🔒 Подтвердите пароль:" 
                               Margin="0,0,0,8"
                               FontWeight="SemiBold"/>

                    <Grid Margin="0,0,0,20" Height="35">
                        <PasswordBox x:Name="ConfirmPasswordBox" 
                                     Padding="8"
                                     ToolTip="Повтори пароль для проверки! 🔁"
                                     PasswordChanged="ConfirmPasswordBox_PasswordChanged" Height="Auto"/>
                        <TextBlock x:Name="ConfirmPasswordPlaceholder"
                                   Text="Повторите пароль..."
                                   Foreground="Gray"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Выбор роли -->
                    <TextBlock Text="👑 Роль:" 
                               Margin="0,0,0,8"
                               FontWeight="SemiBold"/>

                    <ComboBox x:Name="RoleComboBox"
                              Height="35"
                              Margin="0,0,0,25"
                              ToolTip="Выбери свою роль в системе! 💎">
                        <ComboBoxItem Content="🌸 Пользователь" Tag="User" IsSelected="True"/>
                        <ComboBoxItem Content="💎 Администратор" Tag="Admin"/>
                    </ComboBox>

                    <!-- Кнопка регистрации -->
                    <Button x:Name="RegisterButton" 
                            Content="Зарегистрироваться 💫" 
                            Height="45" 
                            Margin="0,0,0,15"
                            Click="RegisterButton_Click"
                            FontWeight="Bold"
                            FontSize="16"
                            Style="{DynamicResource {x:Type Button}}"
                            ToolTip="Создать новый аккаунт! 🎀"
                            Cursor="Hand"/>

                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>