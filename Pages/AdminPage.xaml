<Page x:Class="_522_Miheeva.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Miheeva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="💎 Панель администратора">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Style="{DynamicResource HeaderFooterStyle}"
                Padding="20">
            <TextBlock Text="💎 Панель администратора" 
                       Style="{DynamicResource HeaderTextStyle}"
                       HorizontalAlignment="Center"
                       FontSize="24"/>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Grid.Row="1" 
              VerticalScrollBarVisibility="Auto"
              Margin="20">
            <StackPanel HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Width="600">

                <!-- Приветствие -->
                <Border Style="{DynamicResource AdminCardStyle}"
                        Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="🌸 Добро пожаловать, администратор!" 
                                   Style="{DynamicResource AdminWelcomeTextStyle}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="💖 Управляй своей базой данных в стиле!" 
                                   Style="{DynamicResource AdminSubTextStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Кнопки управления -->
                <WrapPanel HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Margin="0,20,0,0">

                    <!-- Таблица пользователей -->
                    <Button x:Name="BtnUsers" 
        Style="{DynamicResource AdminButtonStyle}"
        Width="180" Height="120"
        Margin="15"
        Click="BtnUsers_Click"
        ToolTip="💼 Управление пользователями системы">
                        <StackPanel>
                            <TextBlock Text="👥" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Пользователи" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnCategories" 
        Style="{DynamicResource AdminButtonStyle}"
        Width="180" Height="120"
        Margin="15"
        Click="BtnCategories_Click"
        ToolTip="📂 Управление категориями платежей">
                        <StackPanel>
                            <TextBlock Text="📊" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Категории" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnPayments" 
        Style="{DynamicResource AdminButtonStyle}"
        Width="180" Height="120"
        Margin="15"
        Click="BtnPayments_Click"
        ToolTip="💰 Просмотр и управление всеми платежами">
                        <StackPanel>
                            <TextBlock Text="💰" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Платежи" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnDiagrams" 
        Style="{DynamicResource AdminButtonStyle}"
        Width="180" Height="120"
        Margin="15"
        Click="BtnDiagrams_Click"
        ToolTip="📈 Аналитика и визуализация данных">
                        <StackPanel>
                            <TextBlock Text="📈" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Диаграммы" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>

                </WrapPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" 
                Style="{DynamicResource HeaderFooterStyle}"
                Padding="10">
        </Border>
    </Grid>
</Page>