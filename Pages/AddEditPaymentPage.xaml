<Page x:Class="_522_Miheeva.Pages.AddEditPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Miheeva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="💰 Добавление платежа">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" 
                    Style="{DynamicResource HeaderFooterStyle}"
                    Padding="15">
                <Grid>
                    <TextBlock x:Name="PageTitle" 
                               Text="💰 Добавление платежа" 
                               Style="{DynamicResource HeaderTextStyle}"
                               HorizontalAlignment="Center"/>
                </Grid>
            </Border>

        <!-- Форма -->
        <Border Grid.Row="1" 
                Margin="20"
                Style="{DynamicResource AuthCardStyle}"
                Padding="30">

            <StackPanel>
                <!-- Название платежа -->
                <TextBlock Text="🏷️ Название платежа:" 
                           Style="{DynamicResource FilterLabelStyle}"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TxtName" 
                         Style="{DynamicResource FilterTextBoxStyle}"
                         Margin="0,0,0,15"
                         ToolTip="Введите название платежа"/>

                <!-- Пользователь -->
                <TextBlock Text="👤 Пользователь:" 
                           Style="{DynamicResource FilterLabelStyle}"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbUser" 
                          Style="{DynamicResource FilterComboBoxStyle}"
                          DisplayMemberPath="FIO"
                          Margin="0,0,0,15"
                          ToolTip="Выберите пользователя"/>

                <!-- Категория -->
                <TextBlock Text="📊 Категория:" 
                           Style="{DynamicResource FilterLabelStyle}"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbCategory" 
                          Style="{DynamicResource FilterComboBoxStyle}"
                          DisplayMemberPath="Name"
                          Margin="0,0,0,15"
                          ToolTip="Выберите категорию"/>

                <!-- Дата -->
                <!-- Дата -->
                <TextBlock Text="📅 Дата:" 
           Style="{DynamicResource FilterLabelStyle}"
           Margin="0,0,0,5"/>
                <DatePicker x:Name="DpDate" 
            Margin="0,0,0,15"
            ToolTip="Выберите дату платежа">
                    <DatePicker.Style>
                        <Style TargetType="DatePicker">
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Background" Value="{DynamicResource LightGoldBrush}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource GoldBrush}"/>
                        </Style>
                    </DatePicker.Style>
                </DatePicker>

                <!-- Количество -->
                <TextBlock Text="📦 Количество:" 
                           Style="{DynamicResource FilterLabelStyle}"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TxtNum" 
                         Style="{DynamicResource FilterTextBoxStyle}"
                         Margin="0,0,0,15"
                         ToolTip="Введите количество"
                         PreviewTextInput="TxtNum_PreviewTextInput"/>

                <!-- Цена -->
                <TextBlock Text="💵 Цена:" 
                           Style="{DynamicResource FilterLabelStyle}"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TxtPrice" 
                         Style="{DynamicResource FilterTextBoxStyle}"
                         Margin="0,0,0,25"
                         ToolTip="Введите цену"
                         PreviewTextInput="TxtPrice_PreviewTextInput"/>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button x:Name="BtnSave" 
                            Content="💾 Сохранить" 
                            Style="{DynamicResource FilterButtonStyle}"
                            Click="BtnSave_Click"
                            Margin="0,0,10,0"/>
                    <Button x:Name="BtnCancel" 
                            Content="❌ Отмена" 
                            Style="{DynamicResource FilterButtonStyle}"
                            Click="BtnCancel_Click"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Статус -->
        <Border Grid.Row="2" 
                Style="{DynamicResource HeaderFooterStyle}"
                Padding="10">
            <TextBlock x:Name="StatusText" 
                       Text="🌸 Заполните все поля" 
                       Style="{DynamicResource HeaderTextStyle}"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
    </ScrollViewer>
</Page>