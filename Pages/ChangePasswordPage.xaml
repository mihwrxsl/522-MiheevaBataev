<Page x:Class="_522_Miheeva.Pages.ChangePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Miheeva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="🔑 Смена пароля">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" 
                    Style="{DynamicResource HeaderFooterStyle}"
                    Padding="15">
                <Grid>
                    <TextBlock Text="🔑 Смена пароля" 
                               Style="{DynamicResource HeaderTextStyle}"
                               HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Форма смены пароля -->
            <Border Grid.Row="1" 
                    Margin="20"
                    Style="{DynamicResource AuthCardStyle}"
                    Padding="30">

                <StackPanel Width="320" HorizontalAlignment="Center">
                    <!-- Заголовок формы -->
                    <TextBlock Text="💖 Смена пароля" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"
                               ToolTip="Обнови свой пароль для безопасности! 🔒"/>

                    <!-- Логин -->
                    <TextBlock Text="👑 Логин:" 
                               Style="{DynamicResource FilterLabelStyle}"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtLogin" 
                             Style="{DynamicResource FilterTextBoxStyle}"
                             Margin="0,0,0,15"
                             ToolTip="Введи свой логин ✨"/>

                    <!-- Старый пароль -->
                    <TextBlock Text="🔒 Старый пароль:" 
                               Style="{DynamicResource FilterLabelStyle}"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="TxtCurrentPassword" 
                                 Margin="0,0,0,15"
                                 ToolTip="Введи свой текущий пароль">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="Height" Value="35"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="Background" Value="{DynamicResource LightGoldBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource GoldBrush}"/>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>

                    <!-- Новый пароль -->
                    <TextBlock Text="🆕 Новый пароль:" 
                               Style="{DynamicResource FilterLabelStyle}"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="TxtNewPassword" 
                                 Margin="0,0,0,15"
                                 ToolTip="Придумай новый пароль (минимум 6 символов, английские буквы и цифры) 💪">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="Height" Value="35"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="Background" Value="{DynamicResource LightGoldBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource GoldBrush}"/>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>

                    <!-- Подтверждение пароля -->
                    <TextBlock Text="🔁 Подтвердите новый пароль:" 
                               Style="{DynamicResource FilterLabelStyle}"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="TxtConfirmPassword" 
                                 Margin="0,0,0,25"
                                 ToolTip="Повтори новый пароль для проверки 🔁">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="Height" Value="35"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="Background" Value="{DynamicResource LightGoldBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource GoldBrush}"/>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>

                    <!-- Кнопка смены пароля -->
                    <Button x:Name="BtnChangePassword" 
                            Content="💾 Сменить пароль" 
                            Height="45" 
                            Margin="0,0,0,15"
                            Click="BtnChangePassword_Click"
                            FontWeight="Bold"
                            FontSize="16"
                            Style="{DynamicResource FilterButtonStyle}"
                            ToolTip="Сохранить новый пароль 🎀"/>

                </StackPanel>
            </Border>

            <!-- Статус -->
            <Border Grid.Row="2" 
                    Style="{DynamicResource HeaderFooterStyle}"
                    Padding="10">
                <TextBlock x:Name="StatusText" 
                           Text="🌸 Заполните все поля для смены пароля" 
                           Style="{DynamicResource HeaderTextStyle}"
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>