<Page x:Class="_522_Miheeva.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Miheeva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="💖 Авторизация">

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
              HorizontalScrollBarVisibility="Disabled"
              Padding="0"
              Margin="0">

        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Карточка авторизации -->
            <Border Grid.Row="1"
                CornerRadius="20"
                Padding="50"
                Margin="30,50,30,50"
                MinWidth="420"
                MinHeight="520"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{DynamicResource AuthCardStyle}">

                <!-- Контейнер для переключения между формой и капчей -->
                <Grid>
                    <!-- 🌟 ОСНОВНАЯ ФОРМА АВТОРИЗАЦИИ -->
                    <StackPanel x:Name="MainAuthPanel" 
                            Width="320" 
                            HorizontalAlignment="Center">

                        <!-- Заголовок -->
                        <TextBlock Text="💖 Вход в систему" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,40"
                               ToolTip="Добро пожаловать в самый гламурный платежный сервис! 💫"/>

                        <!-- Поле логина -->
                        <TextBlock Text="👑 Логин:" 
                               Margin="0,0,0,12"
                               FontWeight="SemiBold"
                               FontSize="15"/>

                        <Grid Margin="0,0,0,25" Height="45">
                            <TextBox x:Name="TextBoxLogin" 
                                 Height="45"
                                 Padding="12"
                                 FontSize="15"
                                 ToolTip="Напиши сюда свой логин или email, красотка! 💕"
                                 TextChanged="TextBoxLogin_TextChanged"/>
                            <TextBlock x:Name="LoginPlaceholder"
                                   Text="Введите логин..."
                                   Foreground="Gray"
                                   Margin="15,0,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   IsHitTestVisible="False"/>
                        </Grid>

                        <!-- Поле пароля -->
                        <TextBlock Text="🔒 Пароль:" 
                               Margin="0,0,0,12"
                               FontWeight="SemiBold"
                               FontSize="15"/>

                        <Grid Margin="0,0,0,35" Height="45">
                            <PasswordBox x:Name="PasswordBox" 
                                     Height="45"
                                     Padding="12"
                                     FontSize="15"
                                     ToolTip="Твой секретный пароль! Никому не говори! 🤫"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>
                            <TextBlock x:Name="PasswordPlaceholder"
                                   Text="Введите пароль..."
                                   Foreground="Gray"
                                   Margin="15,0,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   IsHitTestVisible="False"/>
                        </Grid>

                        <!-- Кнопка входа -->
                        <Button x:Name="ButtonEnter" 
                            Height="50" 
                            Margin="0,10,0,20"
                            Click="ButtonEnter_Click"
                            FontWeight="Bold"
                            FontSize="16"
                            ToolTip="Нажми, чтобы войти в свой аккаунт! ✨">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="🎀" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Войти" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <!-- Дополнительные кнопки -->
                        <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,15,0,0">

                            <Button x:Name="ButtonReg" 
                                Height="42" 
                                Width="155"
                                Margin="0,0,15,0"
                                Click="ButtonReg_Click"
                                FontSize="13"
                                ToolTip="Создать новый аккаунт! Стань частью нашей гламурной семьи! 💖">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="🌸" FontSize="14" Margin="0,0,5,0"/>
                                            <TextBlock Text="Регистрация" FontSize="13"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>

                            <Button x:Name="ButtonChangePassword" 
                                Height="42" 
                                Width="155"
                                Click="ButtonChangePassword_Click"
                                FontSize="13"
                                ToolTip="Забыла пароль? Не беда! Мы поможем! 💕">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="🔑" FontSize="14" Margin="0,0,5,0"/>
                                            <TextBlock Text="Смена пароля" FontSize="13"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                        </StackPanel>

                        <!-- Дополнительное пространство для скроллинга -->
                        <StackPanel Margin="0,50,0,0">
                            <TextBlock Text="✨ Добро пожаловать в Glamour Payments!" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>

                            <TextBlock Text="🌸 Самый стильный способ управлять платежами" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>

                            <TextBlock Text="💖 Красиво, удобно, безопасно" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- 🌟 КАПЧА (изначально скрыта) -->
                    <StackPanel x:Name="CaptchaPanel" 
                            Visibility="Collapsed" 
                            Width="320"
                            HorizontalAlignment="Center">

                        <TextBlock Text="🔐 Проверка безопасности" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"
                               Foreground="{DynamicResource TextBrush}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               ToolTip="Это для твоей же безопасности, милая! 💖"/>

                        <TextBlock Text="Введи текст с картинки ниже:" 
                               FontWeight="SemiBold" 
                               FontSize="15"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextBrush}"
                               ToolTip="Не волнуйся, это ненадолго! 💕"/>

                        <!-- Поле с капчей -->
                        <Border BorderBrush="{DynamicResource GoldBrush}" 
                            BorderThickness="3" 
                            Background="{DynamicResource LightGoldBrush}"
                            CornerRadius="12" 
                            Padding="25" 
                            Margin="0,0,0,25"
                            Height="80"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            ToolTip="Смотри внимательно, красотка! 👀">
                            <TextBlock x:Name="CaptchaText" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="ABC123"
                                   ToolTip="Запомни этот код! ✨"/>
                        </Border>

                        <!-- Поле для ввода капчи -->
                        <TextBox x:Name="CaptchaInput" 
                             Height="45" 
                             Padding="12" 
                             FontSize="16"
                             ToolTip="Введи текст сверху точно так же! Ты справишься! 💪"
                             HorizontalAlignment="Stretch" 
                             Margin="0,0,0,20"
                             TextAlignment="Center"/>

                        <!-- Кнопки капчи -->
                        <Button x:Name="SubmitCaptchaButton" 
                            Height="50" 
                            Margin="0,0,0,15"
                            Click="SubmitCaptchaButton_Click"
                            FontWeight="Bold"
                            FontSize="16"
                            ToolTip="Капча правильная? Тогда вперёд! 🎀">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="✅" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Продолжить" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button x:Name="RefreshCaptchaButton" 
                            Height="40" 
                            Width="180"
                            Click="RefreshCaptchaButton_Click"
                            FontSize="13"
                            HorizontalAlignment="Center"
                            ToolTip="Этот код не нравится? Давай новый! ✨">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="🔄" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Text="Обновить капчу" FontSize="13"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <!-- Дополнительное пространство для скроллинга в капче -->
                        <StackPanel Margin="0,50,0,0">
                            <TextBlock Text="💝 Безопасность - это важно!" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>

                            <TextBlock Text="🔒 Капча защищает твой аккаунт от незваных гостей" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>

                            <TextBlock Text="🌸 Мы заботимся о твоей безопасности" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>

</Page>