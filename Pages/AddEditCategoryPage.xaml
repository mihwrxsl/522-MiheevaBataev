<Page x:Class="_522_Miheeva.Pages.AddEditCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Miheeva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="500"
      Title="📝 Добавление категории">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Style="{DynamicResource HeaderFooterStyle}"
                Padding="15">
            <Grid>
                <TextBlock x:Name="PageTitle" 
                           Text="📝 Добавление категории" 
                           Style="{DynamicResource HeaderTextStyle}"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Форма -->
        <Border Grid.Row="1" 
                Margin="20"
                Style="{DynamicResource AuthCardStyle}"
                Padding="30">

            <StackPanel VerticalAlignment="Center">
                <!-- Название категории -->
                <TextBlock Text="📝 Название категории:" 
                           Style="{DynamicResource FilterLabelStyle}"
                           Margin="0,0,0,10"
                           ToolTip="Введи красивое название для новой категории ✨"/>

                <TextBox x:Name="TxtCategoryName" 
                         Style="{DynamicResource FilterTextBoxStyle}"
                         Margin="0,0,0,25"
                         Height="45"
                         FontSize="16"
                         ToolTip="Например: Транспорт, Развлечения, Продукты 🛍️"/>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button x:Name="BtnSave" 
                            Content="💾 Сохранить" 
                            Style="{DynamicResource FilterButtonStyle}"
                            Click="BtnSave_Click"
                            Margin="0,0,15,0"
                            ToolTip="Сохранить новую категорию в базу данных 🌟"/>
                    <Button x:Name="BtnCancel" 
                            Content="❌ Отмена" 
                            Style="{DynamicResource FilterButtonStyle}"
                            Click="BtnCancel_Click"
                            Margin="15,0,0,0"
                            ToolTip="Вернуться назад без сохранения ↩️"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Статус -->
        <Border Grid.Row="2" 
                Style="{DynamicResource HeaderFooterStyle}"
                Padding="10">
            <TextBlock x:Name="StatusText" 
                       Text="🌸 Введите название категории" 
                       Style="{DynamicResource HeaderTextStyle}"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>