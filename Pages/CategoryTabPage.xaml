<Page x:Class="_522_Miheeva.Pages.CategoryTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Miheeva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="📊 Управление категориями">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Style="{DynamicResource HeaderFooterStyle}"
                Padding="15">
            <Grid>
                <TextBlock Text="📊 Управление категориями" 
                           Style="{DynamicResource HeaderTextStyle}"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Таблица категорий -->
        <Border Grid.Row="1" 
                Margin="20"
                Style="{DynamicResource AuthCardStyle}">

            <StackPanel>
                <!-- Панель действий -->
                <StackPanel Orientation="Horizontal" 
                            Margin="0,0,0,15"
                            HorizontalAlignment="Center">
                    <Button x:Name="BtnAddCategory" 
                            Content="➕ Добавить" 
                            Style="{DynamicResource FilterButtonStyle}"
                            Click="BtnAddCategory_Click"
                            Margin="0,0,10,0"
                            ToolTip="Добавить новую категорию платежей 🌟"/>
                    <Button x:Name="BtnDeleteCategory" 
                            Content="🗑️ Удалить" 
                            Style="{DynamicResource FilterButtonStyle}"
                            Click="BtnDeleteCategory_Click"
                            Margin="10,0,0,0"
                            ToolTip="Удалить выбранную категорию (будь осторожна!) ❌"/>
                </StackPanel>

                <!-- Таблица категорий -->
                <DataGrid x:Name="CategoriesDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="📝 Название" 
                                          Binding="{Binding Name}" 
                                          Width="*">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Название категории платежей 📋"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="✨ Действия" 
                                              Width="150">
                            <DataGridTemplateColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="ToolTip" Value="Доступные действия с категорией ✨"/>
                                </Style>
                            </DataGridTemplateColumn.HeaderStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✏️ Редактировать" 
                                            Style="{DynamicResource FilterButtonStyle}"
                                            Click="EditCategory_Click"
                                            Tag="{Binding ID}"
                                            Margin="2"
                                            ToolTip="Нажми, чтобы изменить название категории 💖"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!-- Статус -->
        <Border Grid.Row="2" 
                Style="{DynamicResource HeaderFooterStyle}"
                Padding="10">
            <TextBlock x:Name="StatusText" 
                       Text="🌸 Готово к работе!" 
                       Style="{DynamicResource HeaderTextStyle}"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>